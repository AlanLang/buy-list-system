<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Sliontek Web</title>
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/masterpage.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <style>
        #user dl dd:hover {
            background-color: #009688;
        }

        body {
            overflow-y: hidden !important;
            background:none !important;
        }
    </style>
    <script src="~/scripts/layui/layui.js"></script>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        OpenDefault();
        layui.config({
            base: '/Scripts/layui/extend/' //假设这是你存放拓展模块的根目录
        });
        layui.use(['form', 'layer', 'laydate'], function ()
        {
            var form = layui.form;
            var layer = parent.layui.layer;
            $("#btnclose").on("click", function ()
            {
                CloseLayer();
            })
            BindClick();
            function BindClick()
            {
                $(".refurbish,#iRefresh").on("click", function ()
                {
                    location.replace(location.href);
                });
            }
        });
        var loadingHtml = '<i class="layui-icon layui-anim layui-anim-rotate layui-anim-loop">&#xe63d;</i>';

        function OpenDefault()
        {
            if (window.top == window.self)
            {
                window.location.href = "http://" + location.host;
            }
        }
        function LayerAuto()
        {
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.iframeAuto(index)
        }
        function LayerClose()
        {
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index); //再执行关闭
        }
        //时间戳的处理
        function formatDate(date) {
            if (!date) {
                return "无";
            }
            if (date == "-62135625600000") {
                return "无";
            }
            var now = new Date(parseInt(date));
            var year = now.getFullYear();
            var month = now.getMonth() + 1;
            var date = now.getDate();
            var hour = now.getHours();
            var minute = now.getMinutes();
            var second = now.getSeconds();
            return year + "年" + month + "月" + date + "日";
        }
        function formatDateTime(date) {
            if (!date) {
                return "无";
            }
            if (date == "-62135625600000") {
                return "无";
            }
            var now = new Date(parseInt(date));
            var year = now.getFullYear();
            var month = now.getMonth() + 1;
            var date = now.getDate();
            var hour = now.getHours();
            var minute = now.getMinutes();
            var second = now.getSeconds();
            return year + "年" + month + "月" + date + "日" + hour + ":" + minute;
        }
    </script>
    <script type="text/html" id="TableSelect">
        <i class="layui-icon" title="选择" lay-event="sel" style="font-size: 25px; color: #177bbb;">&#xe618;</i>
    </script>
</head>
<body>
    @RenderBody()
</body>
</html>
